html
    title="Real Time Web Chat Application"
    script(src='/jquery.js');
    script(src='/chat.js');
    script(src='/socket.io/socket.io.js');

    body
        #content(style='width: 100%; height: 300px; margin: 0 0 20px 0; border: solid 1px #999; overflow-y: auto;')
        .controls
            input.name(style='width: 30%', id='name', placeholder='Name')
            input.field(style='width: 55%', id='field', placeholder='Message')
            input.send(type='button', style="width:13%", value='send', id='send')
