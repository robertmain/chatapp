html
    title="Real Time Web Chat Application"
    script(src='/chat.js');
    script(src='/socket.io/socket.io.js');

    body
        #content(style='width: 500px; height: 300px; margin: 0 0 20px 0; border: solid 1px #999; overflow-y: scroll;')
        .controls
            input.name(style='width: 150px', id='name', placeholder='Name')
            input.field(style='width: 300px', id='field', placeholder='Message')
            input.send(type='button', value='send', id='send')